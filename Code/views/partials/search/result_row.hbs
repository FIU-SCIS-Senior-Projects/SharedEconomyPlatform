<ul class="uk-grid" data-uk-grid-margin>
    {{#each this}}
        <li class="uk-width-small-1-1 uk-width-medium-1-2 uk-width-large-1-3">
            <div class="uk-thumbnail uk-overlay-hover resultItem">
                <figure class="uk-overlay uk-overlay-hover">
                    <img class="uk-overlay-scale" width="600" height="400" src="data:image;base64,{{img}}" alt="">
                    <div id="ratingDiv">
                        <p class="uk-margin-top uk-icon-star" id="profileStar"></p>
                        <strong id="rating"> {{averageRating}}</strong>
                        <span id="fraction"> / 5</span>
                    </div>
                    <figcaption
                            class="uk-overlay-panel uk-overlay-background uk-overlay-bottom uk-ignore uk-text-center">
                        <div>
                            <h3>{{name}}</h3>
                            <p class="uk-text-truncate">{{description}}</p>
                        </div>
                    </figcaption>
                    <a class="uk-position-cover" href="/viewspace/{{_id}}"></a>
                </figure>
            </div>
        </li>
    {{/each}}
</ul>
